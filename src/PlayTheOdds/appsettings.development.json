{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "LiterateConsole" },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "../../log/odd-monitor.txt",
          "fileSizeLimitBytes": "1048576"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}